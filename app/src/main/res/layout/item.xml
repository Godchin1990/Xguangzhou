<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/Story_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="308dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:elevation="7dp"
    card_view:cardBackgroundCollor="000000"
    android:layout_gravity="center"
    card_view:cardElevation="30"
    card_view:contentPadding="20"
    android:layout_margin="8dp"
    android:background="#DEDEDE"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout  android:id="@+id/linear_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="5dp">


        <ImageView   android:id="@+id/linear_list_pic"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView  android:id="@+id/linear_list_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="120dp"
            android:gravity="left|center"
            android:lineSpacingExtra="10dp"
            android:textColor="#6B6B6B"
            android:hint="55555555555555555555555555555"
            android:background="#e0000000" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
